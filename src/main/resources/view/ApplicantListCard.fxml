<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.layout.StackPane?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="300" maxWidth="300" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="150" maxWidth="150" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="400" maxWidth="400" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="100" GridPane.columnIndex="0" GridPane.rowSpan="2">
      <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
        <Label fx:id="status" text="\$status" styleClass="status_label" />
      </HBox>
      <HBox fx:id="phone" alignment="CENTER_LEFT" spacing="10" />
      <HBox fx:id="email" alignment="CENTER_LEFT" spacing="10" />
      <HBox fx:id="position" alignment="CENTER_LEFT" spacing="10" />
    </VBox>
    <VBox minHeight="60.0" GridPane.columnIndex="1" alignment="CENTER">
      <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
      </padding>
      <StackPane fx:id="overallRating" alignment="CENTER" />
    </VBox>
    <VBox minHeight="60.0" GridPane.columnIndex="2">
      <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
      </padding>
      <children>
        <HBox fx:id="interviews" spacing="10"/>
      </children>
    </VBox>
  </GridPane>
</HBox>
